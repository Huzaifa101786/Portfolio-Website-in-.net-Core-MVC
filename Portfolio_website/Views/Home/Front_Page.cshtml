                            <img class="imgsm" src="@data.Pic_1" />

                        </div>

                        <a class="card-action" href="#"><i class="fa fa-heart"></i></a>
                            <div class="card-heading text-uppercase text-center" style="color:dimgrey">
                            @data.Proj_Name
                        </div>                        
                        <div class="card-text text-center">
                                <b>Language:</b> @data.Proj_Language
                        </div>
                        <div class="card-text text-center">
                                <b>Project Type:</b> @data.Proj_Type
                        </div>
                            <div class="pb-4 card-text text-center">
                                <b>Description:</b> @data.Proj_Description
                            </div>
                        
                        <a asp-action="Proj_details" class="card-button"> Check Details</a>
