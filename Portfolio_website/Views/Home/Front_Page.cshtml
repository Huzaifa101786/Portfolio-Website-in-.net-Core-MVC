            </div>       
        }
        </div>
    </div>
        
<br />
<br />
  }  
    <div class="container py-3 text-lg-center">
        <h1 class="text-center title">MY PROJECTS</h1>
            <a asp-action="Add_Proj" class="button btn-light add_ex">Add Experience</a>
        </div>


    <div class="container" style="margin-top:50px;">
        <div class="row mt">

            @*@foreach (var data in Model)*@
            @foreach (Portfolio_Data data in Model.portf)
            {
                    <div class="container container_proj"> @*col col-sm-4*@ 
                    <div class="card-sl">
