@{
}

<section class="ftco-section">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
			<h1 class="title text-center">Add Experience</h1>
		</div>
	</div>
	<div class="container" id="form_center">

		<div class="row justify-content-center" id="form_center row_in">
			<div class="col-md-12" id="form_center">
				<div class="wrapper">
					<div class="row no-gutters" id="row_in">
						<div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
							<div class="contact-wrap w-100 p-md-5 p-4">
								<h3 class="mb-4 white_txt">Please fill the form</h3>

								<form method="post" action="Add_Details" class="contactForm">
									<div class="row" id="row_in">
										<div class="col-md-6 ">
											<div class="form-group">
												<label class="label white_txt" for="">Your Name</label>
												<input type="text" asp-for="Name" class="form-control " placeholder="Name">
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group ">
												<label class="label white_txt" for="">Your TagLine</label>
												<input type="text" asp-for="TagLine" class="form-control" placeholder="TagLine">
											</div>
										</div>
										<div class="col-md-6 pt-2">
											<div class="form-group">
												<label class="label white_txt" for="">Address</label>
												<input type="text" asp-for="Address" class="form-control " placeholder="Your Address">
											</div>
										</div>
										<div class="col-md-6 pt-2">
											<div class="form-group">
												<label class="label white_txt" for="">Contact me</label>
												<input type="text" asp-for="Phone" class="form-control " placeholder="your contact">
											</div>
										</div>
										<div class="col-md-6 pt-2">
											<div class="form-group">
												<label class="label white_txt" for="">Email</label>
												<input type="text" asp-for="Email" class="form-control " placeholder="Email Address">
											</div>
										</div>
										<div class="col-md-6 pt-2">
											<div class="form-group">
												<label class="label white_txt" for="">Website Address</label>
												<input type="text" asp-for="Website" class="form-control" placeholder="Website Address">
											</div>
										</div>
										<div class="col-md-12 pt-2">
											<div class="form-group">
												<label class="label white_txt" for="About yourself"></label>
												<textarea asp-for="AboutMe" class="form-control " cols="30" rows="4" placeholder="Tell something about yourself"></textarea>
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group pt-3">
												<input type="submit" value="Submit" class="btn btn-primary">
												<div class="submitting"></div>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>